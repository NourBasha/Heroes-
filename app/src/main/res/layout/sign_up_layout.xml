<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
    android:background="@drawable/signning_background">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="5dp"
    >


    <ImageView
        android:id="@+id/heroes_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@android:drawable/toast_frame"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/textviews"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:maxWidth="250dp"
            android:layout_marginStart="15dp"
            android:inputType="text"
            android:textStyle="italic"
            android:textColorHint="@color/colorAccent"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/textviews"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/password_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:maxWidth="250dp"
            android:layout_marginStart="15dp"
            android:inputType="textPassword"
            android:textStyle="italic"
            android:textColorHint="@color/colorAccent"
            />
        />


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeatPasswrord"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/textviews"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:maxWidth="250dp"
            android:inputType="textPassword"
            android:layout_marginStart="15dp"
            android:textStyle="italic"
            android:textColorHint="@color/colorAccent"
           />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/textviews"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:maxWidth="250dp"
            android:layout_marginStart="15dp"
            android:inputType="textEmailAddress"
            android:textStyle="italic"
            android:textColorHint="@color/colorAccent"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birth"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/textviews"
            android:layout_gravity="center_vertical"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:maxWidth="250dp"
            android:layout_marginStart="15dp"
            android:inputType="date"
            android:textStyle="italic"
            android:textColorHint="@color/colorAccent"
            android:hint="   MM/DD/YY"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_type"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/textviews"
            android:layout_gravity="center_vertical"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:layout_marginStart="15dp"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player"
                android:textColor="@color/textviews"
                android:layout_gravity="center_horizontal"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor"
                android:textColor="@color/textviews"
                android:layout_gravity="center_horizontal"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent"
                android:textColor="@color/textviews"
                android:layout_gravity="center_horizontal"/>

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/textviews"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:maxWidth="250dp"
            android:layout_marginStart="15dp"
            android:inputType="text"
            android:textStyle="italic"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/green_light_signup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:src="@android:drawable/presence_online" />

    <Button
        android:id="@+id/signUp_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/buttons"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:layout_margin="60dp"/>

</LinearLayout>

</ScrollView>
