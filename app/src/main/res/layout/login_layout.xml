<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/loginBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo"
            />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edttxt_email_login"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/emailLogin"
                    style="@style/MyEditTextstyle"
                    android:backgroundTint="@color/editTxtBackgroundTNT"
                    android:textColorHint="@color/hints"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/edttxt_password_login"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style="@style/MyEditTextstyle"
                    android:textColorHint="@color/hints"
                    android:backgroundTint="@color/editTxtBackgroundTNT"
                    android:hint="@string/passwordLogin"
                    android:textStyle="italic"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/buttons"
                        android:alpha="0.4"/>
                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:elevation="2dp"
                        android:background="@color/brownButtons"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"/>
                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/buttons"
                        android:alpha="0.4"/>
                    <Button
                        android:id="@+id/signUp_button_from_login"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/make_account"
                        android:textAllCaps="false"
                        android:background="@color/brownButtons"
                        android:textColor="@color/white"
                        android:elevation="2dp"
                        android:layout_gravity="center_horizontal" />

                </FrameLayout>



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                    <TextView
                        android:id="@+id/forgot_password_txtview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal|top"
                        android:text="@string/forgot_password"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/hints"
                        />

                </FrameLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>




</ScrollView>


